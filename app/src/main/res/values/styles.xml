<?xml version="1.0" encoding="utf-8"?>
<resources>

    // Style for the datePicker
    <style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="android:textSize">@dimen/number_picker_text_size</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:selectableItemBackgroundBorderless">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowBackground">@color/header_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>


    // Style for the timePicker
    <style name="MySpinnerTimePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/MySpinnerTimePicker</item>
        <item name="android:textSize">@dimen/number_picker_text_size</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:selectableItemBackgroundBorderless">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowBackground">@color/header_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:titleTextStyle">@dimen/title_text_size</item>
    </style>

    <style name="MySpinnerTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>